<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blogspot.estamoscercadelfututro.proyectosensores.Localizacion">

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.19"
            android:text="APP Localización GPS"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posición"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.16" />

        <TextView
            android:id="@+id/txt_aviso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obteniendo Información por favor espere..."
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="76dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Altura: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Longitud: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_altura"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txt_longitud"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txt_latitud"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Latitud: "
                android:textStyle="bold" />
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/tb_5s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textOn="5 seg"
                android:textOff="5 seg"/>

            <ToggleButton
                android:id="@+id/tb_10s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10 seg"
                android:textOn="10 seg"
                android:textOff="10 seg"/>

            <ToggleButton
                android:id="@+id/tb_30s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30 seg"
                android:textOn="30 seg"
                android:textOff="30 seg"/>

            <ToggleButton
                android:id="@+id/tb_1m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1 min"
                android:textOn="1 min"
                android:textOff="1 min"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09" />

        <Button
            android:id="@+id/btn_coordenadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listar Coordenadas" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="Aviso! \n Recuerde habilitar los permisos de ubicación \n de la aplicación."
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
